<h2>Search authors</h2>
<form action="/authors" type="GET">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>">
  <button type="submit">Search</button>
</form>
<br />
 <% if (authors.length > 0) { %>
    <% authors.forEach(author => { %>
      <div><%= author.name %></div>
    <% }) %>
  <% } else { %>
    <p>No authors found</p>
  <% } %>
